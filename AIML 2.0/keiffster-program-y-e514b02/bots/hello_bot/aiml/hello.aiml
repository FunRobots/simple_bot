<?xml  version="1.0.1" encoding="UTF-8"?>
<aiml>

<category>
    <pattern>ПРИВЕТ</pattern>
    <template>
    	<condition name="user_name" value="unknown">
    		<set name="user_name"> </set>
    	</condition>
    	<condition name="hi_was" value="true">
    		уже здоровались)
    	</condition>
    	
    	 <condition name="hi_was" value="unknown">
		    <random>
		    	<li>привет <get name="user_name"/></li>
		    	<li>приветик <get name="user_name"/></li>
		    	<li>здорово <get name="user_name"/></li>
		    	<li>здравствуй <get name="user_name"/></li>
		    </random>
		</condition>
		<think><set name="hi_was">true</set></think>
    </template>
</category>

<category>
    <pattern>ПРИВЕТИК</pattern>
    <template>
    	<srai>ПРИВЕТ</srai>
    </template>
</category>

<category>
    <pattern>ЗДРАВСТВУЙ</pattern>
    <template>
    	<srai>ПРИВЕТ</srai>
    </template>
</category>

<category>
    <pattern>ЗДОРОВО</pattern>
    <template>
    	<srai>ПРИВЕТ</srai>
    </template>
</category>


<category>
    <pattern>ДОБРЫЙ ДЕНЬ</pattern>
    <template>
    	<random>
    		<li>добрый день</li>
    		<li>добрый</li>
    	</random>
    </template>
</category>

<category>
    <pattern>ДОБРЫЙ ВЕЧЕР</pattern>
    <template>
    	<random>
    		<li>добрый вечер</li>
    		<li>добрый</li>
    	</random>
    </template>
</category>

<category>
    <pattern>ДОБРОЕ УТРО</pattern>
    <template>
    	<random>
    		<li>доброе утро</li>
    		<li>доброе</li>
    	</random>
    </template>
</category>



<category>
    <pattern>КАК ДЕЛА</pattern>
    <template>
    	<condition name="user_name" value="unknown">
    		<set name="user_name"> </set>
    	</condition>
        <random>
        	<li>хорошо</li>
        	<li>отлично</li>
        	<li>ужасно</li>
        	<li>зер гут!</li>
        </random>
        А ты как?
    </template>
</category>

<category>
    <pattern>* КАК ДЕЛА</pattern>
    <template>
   		<srai><star/></srai>
        <srai>КАК ДЕЛА</srai>
    </template>
</category>

<category>
	<pattern>ХОРОШО</pattern>
	<that> * А ты как? </that>
	<template>
        рад за тебя, <get name="user_name"/>
	</template>
</category>


<category>
	<pattern>ПЛОХО</pattern>
	<that> * А ты как? </that>
	<template>
       	жаль тебя, <get name="user_name"/>
	</template>
</category>

<category>
	<pattern>МЕНЯ ЗОВУТ *</pattern>
	<template>
		приятно познакомиться, <set name="user_name"><star/></set> !
	</template>
</category>
  
</aiml>
